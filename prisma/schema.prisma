generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Define tables
model User {
  id          String  @id @default(uuid())
  cleckId String
  name String
  email       String
  profile String
  // bookings Booking[]
}

model Hotel {
  id            String  @id @default(uuid())
  name          String
  location      String
  price Float
    // bookings Booking[]
}

model TransportOption {
  id    String  @id @default(uuid())
  type  String
  price Float
    // bookings Booking[]
}

